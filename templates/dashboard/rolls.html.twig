{% extends '@EasyAdmin/welcome.html.twig' %}
{% block page_title 'Dashboard de Rolls' %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-3">
            <div class="mb-2 border-danger">
                <h4>Nombre de NDD :</h4>
                <h5>{{ count }}</h5>
            </div>
            <div>
                <h4>Noms des NDD :</h4>
                {% for ndd in ndds %}
                    <div>
                        <p>- {{ ndd.name }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div>
            <h4>Total des ventes</h4>
            <p>{{ sum }}</p>
        </div>
    </div>
    <div class="d-flex">
        <div class="col-sm-4">
            <canvas id="rollsDname" width="400" height="400"></canvas>
        </div>
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
        </div>
    </div>
    <div class="col-sm-12">
    </div>
{% endblock %}
 {% block body_javascript %}
     {{ encore_entry_script_tags('app') }}
     <script>
         let rollsDname = document.querySelector("#rollsDname")
         let rollsDnameGraph = new Chart(rollsDname, {
             type: "doughnut",
             data: {
                 labels: {{ rollsDname|raw }},
                 datasets: [{
                     label: "Répartition des catégories",
                     data: {{ sumDname|raw }},
                     backgroundColor: {{ colorDname|raw }}
                 }]
             }
         })
     </script>
 {% endblock body_javascript %}
