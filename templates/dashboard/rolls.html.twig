{% extends '@EasyAdmin/welcome.html.twig' %}
{% block page_title 'Dashboard de Rolls' %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-3">
            <div class="mb-2 border-danger">
                <h4>Nombre de NDD :</h4>
                <h5>{{ count }}</h5>
            </div>
            <div>
                <h4>Noms des NDD :</h4>
                {% for ndd in ndds %}
                    <div>
                        <p>- {{ ndd.name }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
            <div>
                <h4>Total des ventes</h4>
                <p>{{ sum }}</p>
            </div>
    </div>
{% endblock %}
