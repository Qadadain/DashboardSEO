{% extends '@EasyAdmin/welcome.html.twig' %}
{% block page_title 'Dashboard de Hellsaya' %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-3 d-flex flex-column mr-1 p-0 card card-panel  mt-3">
            <div>
                <h6 class="pl-2">Nombre de NDD </h6>
            </div>
            <div class="d-flex justify-content-center">
                <h3>{{ count }}</h3>
            </div>
        </div>
        <div class="col-sm-5">
        </div>
        <div class="col-sm-3 d-flex flex-column mr-1 p-0 card card-panel  mt-3">
            <div>
                <h6 class="pl-2">Total des ventes</h6>
            </div>
            <div class="d-flex justify-content-center">
                <h3>{{ sum }} €</h3>
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="col-sm-4">
            <canvas id="hellsayaDname" width="400" height="400"></canvas>
        </div>
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <canvas id="hellsayaCustomer" width="400" height="400"></canvas>
        </div>
    </div>

    <div class="col-sm-12">
    </div>
{% endblock %}
 {% block body_javascript %}
     {{ encore_entry_script_tags('app') }}
     <script>
         let hellsayaDname = document.querySelector("#hellsayaDname")
         let hellsayaDnameGraph = new Chart(hellsayaDname, {
             type: "doughnut",
             data: {
                 labels: {{ hellsayaDname|raw }},
                 datasets: [{
                     label: "Répartition des catégories",
                     data: {{ sumDname|raw }},
                     backgroundColor: {{ colorDname|raw }}
                 }]
             }
         })
         let hellsayaCustomer = document.querySelector("#hellsayaCustomer")
         let hellsayaCustomerGraph = new Chart(hellsayaCustomer, {
             type: "doughnut",
             data: {
                 labels: {{ hellsayaCustomer|raw }},
                 datasets: [{
                     label: "Répartition des catégories",
                     data: {{ sumCustomer|raw }},
                     backgroundColor: {{ colorCustomer|raw }}
                 }]
             }
         })
     </script>
 {% endblock body_javascript %}
